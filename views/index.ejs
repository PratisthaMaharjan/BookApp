<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"> <!-- for css -->
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
        
        <div class="row book-list">
        <a href="/add-book" class="card add-book" style="width: 18rem;">+</a>
        <% bookList.forEach((book) => { %>
          <div class="card" style="width: 18rem;">
            
              <div class="card-body">
                  <h5 class="card-title"><%=book.name %></h5>
                  <div class="card-details">
                    <p class="card-text"><%=book.description %></p>
                    <p class="card-text"><%=book.author %></p>
                  </div>
                  <div class="card-action">
                    <a href="/edit/<%= book._id %>?name=<%= book.name%>&description=<%= book.description%>&author=<%= book.author%>" class="btn btn-primary edit">Edit</a>
                    <a href="/remove/<%= book._id %>" class="btn btn-primary delete">Delete</a>
                  </div>
              </div>
          </div>
        <% })%>
    </div>
    <script>
      const data = <%- JSON.stringify(bookList) %>;
      // console.log(data);
    </script>
    <script src="/javascripts/script.js"></script>
  </body>
</html>
